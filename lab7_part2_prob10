#include <iostream>
using namespace std;
int powofnum(int a, int b) {
    if (b == 0) {
        return 1;
    }
    if (b%2 == 0) {
        return powofnum(a,b/2) * powofnum(a, b/2);
    }else {
        return a*powofnum(a, b-1);
    }
}
int main() {
    int a,b;
    cout << "Enter numbers: ";
    cin >> a>>b;
    cout<<"result: " << powofnum(a,b) << endl;
}
